@model  IEnumerable<Entities.Trainer>


<style>
    td img{
        width:100px;
        height:170px;
    }

    tr:hover{
        background-color:lightgray;
    }
</style>

<div>
    <h1>
        <u>Trainers</u>
    </h1>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Photo</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date Hired</th>
                <th>Subject</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var trainer in Model)
            {
                <tr>

                    <td>@trainer.TrainerId</td>
                    <td>
                        <img src="@trainer.PhotoUrl" alt="Alternate Text" />
                    </td>
                    <td>@trainer.FirstName</td>
                    <td>@trainer.LastName</td>
                    <td>@trainer.DateHired</td>
                    <td>@(trainer.Subject?.Title)</td>
                    <td>
                        <a class="btn btn-primary" href="/Trainer/Details?id=@trainer.TrainerId">Details</a>
                        <a class="btn btn-success" href="/Trainer/Edit?id=@trainer.TrainerId">Edit</a>
                        <a class="btn btn-danger" href="#">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a class="btn btn-primary" href="/Trainer/Create">Create Trainer</a>
</div>